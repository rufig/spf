<def name="(T-PAT)" ds=" i*x addr u -- j*x ">
  <r:mm> HERE >R </r:mm>
  <repeat>
    `{ SPLIT-
  <while/>
    T-SLIT  <r:m> S, </r:m>
    `} SPLIT
  <while/>
    2>R
    T-PLAIN <r:m> S, </r:m>
    2R>
  </repeat>
  T-SLIT <r:m> S, </r:m>
  <r:mm> R> HERE OVER - </r:mm>
</def>

<def name="T-PAT" ds=" i*x addr u -- j*x ">
  2DUP `{ CONTAINS <if> (T-PAT) <exit/></if> T-SLIT
</def>

</forth>
